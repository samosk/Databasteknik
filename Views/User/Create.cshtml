@model Databasteknik.Models.UserModel

@{
    ViewData["Title"] = "Create User";
}

<div class="container mt-4">
    <h1 class="mb-4">Create New User</h1>
    
    @* Display page info from ViewData *@
    @if (ViewData["PageInfo"] != null)
    {
        <p class="text-muted">@ViewData["PageInfo"]</p>
    }

    @* Display error message from ViewBag *@
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <form asp-controller="User" asp-action="Create" method="post">
                
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" id="Email" name="Email" class="form-control" placeholder="user@email.com" required />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" id="FirstName" name="FirstName" class="form-control" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" id="LastName" name="LastName" class="form-control" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="DateOfBirth" class="form-label">Date of Birth</label>
                    <input type="date" id="DateOfBirth" name="DateOfBirth" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="SubscriptionTier" class="form-label">Subscription Tier</label>
                    <select id="SubscriptionTier" name="SubscriptionTier" class="form-select" required>
                        <option value="">-- Select Subscription Tier --</option>
                        <option value="standard">Standard</option>
                        <option value="premium">Premium</option>
                    </select>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Create User</button>
                    <a asp-controller="User" asp-action="" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>