@model IList<Databasteknik.Models.UserModel>

@{
    ViewData["Title"] = "Users";
}

<div>
    @if (Model != null && Model.Any())
    {
        <div>
            <table>
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Date of Birth</th>
                        <th>Date of Creation</th>
                        <th>Subscription Tier</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>@user.DateOfCreation.ToString("yyyy-MM-dd")</td>
                            <td>@user.SubscriptionTier.ToString()</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span>Active</span>
                                }
                                else
                                {
                                    <span>Inactive</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div>
            <p>Total Users: @(ViewBag.TotalUsers ?? Model.Count)</p>
        </div>
    }
    else
    {
        <div role="alert">
            No users found. <a asp-action="Create">Create the first user</a>
        </div>
    }
</div>