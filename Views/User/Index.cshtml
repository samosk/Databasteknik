@model IList<Databasteknik.Models.UserModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    
    @* Display success message from TempData *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Display error message from TempData *@
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Display Session and Cookie Information *@
    <div class="row mb-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-server"></i> Session Data
                </div>
                <div class="card-body">
                    <p><strong>Visit Count:</strong> @ViewBag.VisitCount</p>
                    <p><strong>Last Visit:</strong> @ViewBag.LastVisit</p>
                    <a asp-action="ClearSession" class="btn btn-sm btn-warning">Clear Session</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-cookie"></i> Cookie Data
                </div>
                <div class="card-body">
                    <p><strong>Last Viewed User:</strong> @(ViewBag.LastViewedUser ?? "None")</p>
                    <a asp-action="ClearCookies" class="btn btn-sm btn-warning">Clear Cookies</a>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>User List</h1>
            @if (ViewBag.LastUpdated != null)
            {
                <small class="text-muted">Last updated: @ViewBag.LastUpdated</small>
            }
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>User ID</th>
                        <th>Email</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Date of Birth</th>
                        <th>Date of Creation</th>
                        <th>Subscription Tier</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>@user.DateOfCreation.ToString("yyyy-MM-dd")</td>
                            <td>
                                <span class="badge bg-@(user.SubscriptionTier == "premium" ? "warning" : "info")">
                                    @user.SubscriptionTier
                                </span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="ViewUser" asp-route-id="@user.UserId" class="btn btn-sm btn-info" title="View Details">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>

                        
                    }
                </tbody>
            </table>
        </div>
        
        <div class="mt-3">
            <p class="text-muted">Total Users: @(ViewBag.TotalUsers ?? Model.Count)</p>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No users found. <a asp-action="Create">Create the first user</a>
        </div>
    }
</div>